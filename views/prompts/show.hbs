<section class="flex flex-wrap gap-8 mb-10 text-lg text-white break-words md:flex-nowrap">
    <section class="flex flex-col flex-wrap w-full p-4 mb-5 bg-white rounded-lg md:w-2/3 bg-opacity-5 h-fit">
        <h2 class="w-full mb-5 text-2xl font-bold text-center md:text-4xl">{{prompt.title}}</h2>
        <p class="w-full text-base sm:text-lg">{{prompt.body}}</p>
    </section>

    <section class="flex flex-col flex-wrap w-full p-4 text-center bg-white rounded-lg md:w-1/3 bg-opacity-5 h-fit">
        <section class="flex flex-col flex-wrap items-center w-full mb-5 text-center">
            <img src="{{prompt.user.image}}" alt="{{prompt.user.displayName}}" referrerpolicy="no-referrer"
                class="w-10 mb-2 rounded-full">
            <h4 class="mb-2 text-base sm:text-lg">{{prompt.user.displayName}}</h4>

            <a href="/prompts/user/{{prompt.user._id}}"
                class="px-4 py-3 text-white bg-blue-700 border-2 border-blue-800 rounded-lg shadow-xl cursor-pointer hover:bg-blue-800">More
                prompts</a>
        </section>
        <section class="flex flex-col flex-wrap items-center w-full mb-5 text-center">
            <h5 class="mb-2 text-base font-bold sm:text-xl">AI</h5>
            <p class="text-base sm:text-lg">{{prompt.ai}}</p>
        </section>

        <section class="flex flex-col flex-wrap text-center">
            <h5 class="mb-2 text-base font-bold sm:text-xl">Description</h5>
            <p class="text-base sm:text-lg">{{prompt.description}}</p>
        </section>
    </section>


</section>

<nav class="flex flex-wrap justify-center mb-4">
    <a href="/prompts/gallery"
        class="px-4 py-3 text-base font-bold text-white bg-blue-700 border-2 border-blue-800 rounded-lg shadow-xl sm:text-xl hover:bg-blue-800">Back</a>
</nav>