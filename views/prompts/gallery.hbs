<h1 class="mb-10 text-sm font-bold text-center sm:text-base md:text-xl lg:text-2xl">Latest Prompts</h1>
{{#if prompts}}
<div
    class="container grid grid-cols-1 gap-4 mx-auto md:gap-6 lg:gap-10 md:grid-cols-3 min-[480px]:grid-cols-2 lg:grid-cols-4 xl:grid-cols-5">
    {{#each prompts}}
    <div class="relative flex flex-col items-center p-2 bg-white rounded-lg">
        {{{editIcon user ../user _id}}}
        <a href="#" class="flex items-center p-4 text-xs text-slate-700">
            <img class="w-4 h-4 mr-1 rounded-full" src="{{user.image}}" referrerpolicy="no-referrer"
                alt="Avatar of {{user.displayName}}">
            <span>{{user.displayName}}</span>
        </a>

        <img src="/assets/logos/{{concatToLowerCase ai}}.webp" class="h-8 mb-3 rounded-lg">

        <div class="flex flex-col justify-between w-full h-full p-4 pt-0">

            <div class="flex flex-col justify-between mb-3 text-center">
                <h2 href="#" class="text-xs font-bold break-all text-slate-900 line-clamp-1">
                    {{title}}</h2>
                <p class="mb-2 text-xs break-all text-slate-700">{{ai}}</p>
                <p class="text-xs break-all text-slate-700 line-clamp-3">{{description}}
                </p>
            </div>

            <div class="flex items-center">
                <a href="/prompts/{{_id}}"
                    class="px-2 py-2 mx-auto text-xs text-center bg-blue-700 border-2 border-blue-800 rounded-lg shadow-lg w-fit hover:bg-blue-800 sm:text-sm lg:text-base">View
                    prompt</a>
            </div>
        </div>

    </div>
    {{/each}}
</div>
{{else}}
<p class="text-lg col-span-full sm:text-xl md:text-2xl">No public prompt available.</p>
{{/if}}